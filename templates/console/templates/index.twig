{% set activeItem = "templates" %}

{% extends "page.twig" %}

{% block body %}

    <table>
        <thead>
            <tr>
                <th>Template</th>
                <th>Modified</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for template in templates %}
                <tr>
                    <td>
                        <a href="/_outpost/templates?template={{ template.templateName|e("url") }}">{{ template.templateName }}</a>
                    </td>
                    <td>
                        {{ template.timeModified|date('F j, g:i A') }}
                    </td>
                    <td>
                        <a href="/_outpost/templates/preview?template={{ template.templateName|e("url") }}">Preview</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>


{% endblock %}
